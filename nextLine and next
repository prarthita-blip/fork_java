class Geeks {
	static void getInput () {
		
	    Scanner sc = new Scanner(System.in);
	    int t=sc.nextInt(); //Taking the number of testcases
	    while(t-->0)
	    {
    		
    	    
    	    //Your code here
    	    int a = sc.nextInt();
            String s = sc.next();
            s += sc.nextLine();
    
    		System.out.println(a);
    		System.out.println(s);
	    }
	
	}
}
